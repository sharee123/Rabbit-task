<%= simple_form_for(@task,html:{ class: 'form-vertical' }) do |f| %>
  <%= f.collection_select :category_id, Category.all, :id, :name, { prompt:"chose a category"}, input_html: { class: "dropdown-toggle"}%>
  <%= f.input :title ,input_html: { class: "form-control"}%>
  <%= f.input :description, input_html: { class: "form-control"} %>
  <%= f.input :company, input_html: { class: "form-control"} %>
  <%= f.input :url, input_html: { class: "form-control"} %>
  <%= f.button :submit,input_html: { class: "form-control"} %>

<% end %>
